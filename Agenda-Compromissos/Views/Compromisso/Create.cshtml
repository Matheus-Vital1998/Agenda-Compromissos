@model Agenda_Compromissos.Models.Compromisso

@{
    ViewData["Title"] = "Criar Compromisso";
}

<h1>Criar Compromisso</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DataCompromisso" class="control-label">Data do Compromisso</label>
                <input asp-for="DataCompromisso" class="form-control" />
                <span asp-validation-for="DataCompromisso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HoraCompromisso" class="control-label">Hora do Compromisso</label>
                <input asp-for="HoraCompromisso" class="form-control" />
                <span asp-validation-for="HoraCompromisso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Participantes" class="control-label">Participantes</label>
                <input asp-for="Participantes" class="form-control" />
                <span asp-validation-for="Participantes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Criar Compromisso</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}