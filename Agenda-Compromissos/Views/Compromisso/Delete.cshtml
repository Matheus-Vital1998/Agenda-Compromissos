@model Agenda_Compromissos.Models.Compromisso

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Detalhes do Compromisso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.DataCompromisso)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCompromisso)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.HoraCompromisso)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraCompromisso)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Participantes)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Participantes)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Descricao)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirmar Exclusão</button> |
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>