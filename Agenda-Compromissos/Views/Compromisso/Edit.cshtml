@model Agenda_Compromissos.Models.Compromisso

@{
    ViewData["Title"] = "Editar Compromisso";
}

<link rel="stylesheet" href="~/css/edicao.css" asp-append-version="true" />

<h1 class="agenda-title">Editar Compromisso</h1>

<div class="container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="DataCompromisso" class="control-label font-weight-bold">Data e Hora</label>
            <input asp-for="DataCompromisso" class="form-control" />
            <span asp-validation-for="DataCompromisso" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Endereco" class="control-label font-weight-bold">Endereço</label>
            <input asp-for="Endereco" class="form-control" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Participantes" class="control-label font-weight-bold">Participantes</label>
            <input asp-for="Participantes" class="form-control" />
            <span asp-validation-for="Participantes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descricao" class="control-label font-weight-bold">Descrição</label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success btn-equal">Salvar</button>
            <a class="btn btn-secondary btn-equal" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}